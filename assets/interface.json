{
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb"
        }
    ],
    "resource": [
        {
            "name": "B 服",
            "path": [
                "{PROJECT_DIR}/resource/base"
            ]
        },
        {
            "name": "国际服",
            "path": [
                "{PROJECT_DIR}/resource/base",
                "{PROJECT_DIR}/resource/global"
            ]
        }
    ],
    "task": [
        {
            "name": "启动游戏",
            "entry": "打开炽焰天穹"
        },
        {
            "name": "开始唤醒",
            "entry": "进入游戏任务入口"
        },
        {
            "name": "作战",
            "entry": "定位入口",
            "pipeline_override": {
                "是否需要体力": {
                    "next": [
                        "体力不够",
                        "消耗所有体力",
                        "消耗体力确认"
                    ]
                }
            },
            "option": [
                "作战关卡选择",
                "自动战斗"
            ]
        },
        {
            "name": "领取任务和礼物",
            "entry": "定位入口",
            "pipeline_override": {
                "定位入口": {
                    "next": "定位任务入口"
                }
            }
        },
        {
            "name": "挂机结束（暂时只挂竞技场高级2,默认auto full）",
            "entry": "定位入口",
            "option": [
                "斩突打？"
            ],
            "pipeline_override": {
                "定位入口": {
                    "next": "定位竞技场入口"
                },
                "是否需要体力": {
                    "next": "队伍切换"
                },
                "是否自动战斗": {
                    "next": "确认打开自动战斗",
                    "interrupt": "打开自动战斗"
                },
                "选择自动级别": {
                    "expected": "FULL"
                },
                "战斗结束后操作": {
                    "next": "省电模式",
                    "interrupt": "拾取战斗奖励"
                }
            }
        }
    ],
    "option": {
        "作战关卡选择": {
            "cases": [
                {
                    "name": "活动棱镜战",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位活动棱镜战入口"
                        },
                        "战斗结束后操作": {
                            "next": "放弃连战"
                        }
                    }
                },
                {
                    "name": "普通棱镜战（暂无）",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "普通棱镜战任务入口"
                        }
                    }
                },
                {
                    "name": "宝石棱镜战——红",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位宝石棱镜战入口"
                        },
                        "选择宝石颜色": {
                            "expected": "群山重锤"
                        }
                    }
                },
                {
                    "name": "宝石棱镜战——蓝",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位宝石棱镜战入口"
                        },
                        "选择宝石颜色": {
                            "expected": ["冰雹马","冰电马"]
                        }
                    }
                },
                {
                    "name": "宝石棱镜战——黄",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位宝石棱镜战入口"
                        },
                        "选择宝石颜色": {
                            "expected": "石柱像"
                        }
                    }
                },
                {
                    "name": "宝石棱镜战——白",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位宝石棱镜战入口"
                        },
                        "选择宝石颜色": {
                            "expected": "坚甲皓珠"
                        }
                    }
                },
                {
                    "name": "宝石棱镜战——黑",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位宝石棱镜战入口"
                        },
                        "选择宝石颜色": {
                            "expected": "掩面死神"
                        }
                    }
                },
                {
                    "name": "光球棱镜战（暂无）",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "定位光球棱镜战入口"
                        }
                    }
                },
                {
                    "name": "废域（暂无）",
                    "pipeline_override": {
                        "定位入口": {
                            "next": "废域任务入口"
                        }
                    }
                }
            ]
        },
        "自动战斗": {
            "cases": [
                {
                    "name": "AUTO FULL",
                    "pipeline_override": {
                        "是否自动战斗": {
                            "next": "确认打开自动战斗",
                            "interrupt": "打开自动战斗"
                        },
                        "选择自动级别": {
                            "expected": "FULL"
                        }
                    }
                },
                {
                    "name": "自定义策略1",
                    "pipeline_override": {
                        "是否自动战斗": {
                            "next": "确认关闭自动战斗",
                            "interrupt": "关闭自动战斗"
                        },
                        "确认关闭自动战斗": {
                            "next": "A1-0"
                        }
                    }
                },
                {
                    "name": "自定义策略2",
                    "pipeline_override": {
                        "是否自动战斗": {
                            "next": "确认关闭自动战斗",
                            "interrupt": "关闭自动战斗"
                        },
                        "确认关闭自动战斗": {
                            "next": "B1-0"
                        }
                    }
                },
                {
                    "name": "自定义策略3",
                    "pipeline_override": {
                        "是否自动战斗": {
                            "next": "确认关闭自动战斗",
                            "interrupt": "关闭自动战斗"
                        },
                        "确认关闭自动战斗": {
                            "next": "C1-0"
                        }
                    }
                }
            ]
        },
        "斩突打？": {
            "cases": [
                {
                    "name": "斩",
                    "pipeline_override": {
                        "斩突打": {
                            "roi_offset": [0,-260,0,0]
                        }
                    }
                },
                {
                    "name": "突",
                    "pipeline_override": {
                        "斩突打": {
                            "roi_offset": [0,-130,0,0]
                        }
                    }
                },
                {
                    "name": "打",
                    "pipeline_override": {
                        "斩突打": {
                            "roi_offset": [0,0,0,0]
                        }
                    }
                }
            ]
        }
    }
}
